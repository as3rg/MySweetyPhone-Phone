<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Saved">

    <LinearLayout
        android:id="@+id/MainLayoutSAVED"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MessagesWillBeHereSAVED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dp"
            android:text="@string/msgWillBeHereTextSAVED"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textStyle="italic" />

        <ListView
            android:id="@+id/ListMessagesSAVED"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:background="@color/chatColor"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/ChooseFileSAVED"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/style_button_background"
                android:src="?android:attr/actionModeFindDrawable"
                tools:ignore="NestedWeights" />

            <EditText
                android:id="@+id/TextFieldSAVED"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/writeMessage"
                android:inputType="textMultiLine" />

            <ImageButton
                android:id="@+id/SendButtonSAVED"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/style_button_background"
                android:src="@drawable/ic_menu_send" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>