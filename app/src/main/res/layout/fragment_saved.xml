<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Saved"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/ButtonsBarSAVED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chatColor"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="511dp">

        <EditText
            android:id="@+id/TextFieldSAVED"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="@string/writeMessage"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/ChooseFileSAVED"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_style_button_background"
            android:src="@drawable/ic_saved_attack_file"
            tools:ignore="NestedWeights" />

        <ImageButton
            android:id="@+id/SendButtonSAVED"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/ic_style_button_background"
            android:src="@drawable/ic_menu_send" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollBarSAVED"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/MessagesSAVED"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>